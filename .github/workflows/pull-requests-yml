name: Automerge

on:
  pull_request:
    types:
      - labeled
      - unlabeled
      - synchronize
      - opened
      - edited
      - ready_for_review
      - reopened
      - unlocked
    branches: [ master ]
  # También se ejecuta en push a cualquier rama (para que se ejecute al crear la rama)
  push:
    branches-ignore: [ master ]

jobs:
  job1:
    name: Pruebas
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout de repositorio
      uses: actions/checkout@v4
      
    - name: Configuración de entorno de python
      uses: actions/setup-python@v5
      with:
          python-version: '3.11'
          
    - name: Instalación de librerías y dependencias
      run: |
        python -m pip install --upgrade pip
        if [ -f requirements.txt ]; then pip install -r requirements.txt; fi
        pip install coverage
        
    - name: Correr pruebas
      id: correr-pruebas
      env:
        PYTHONPATH: src
      run: python -m unittest -v tests/test-persona.py
      
    - name: Cálculo de cubrimiento
      id: cubrimiento
      env:
        PYTHONPATH: src
      run: |
          coverage run -m unittest tests/test-persona.py
          coverage report -m

  automerge:
    name: Automerge
    needs: job1
    runs-on: ubuntu-latest
    # Solo se ejecuta en pull requests, no en push
    if: github.event_name == 'pull_request'
    
    steps:
      - name: Checkout de repositorio
        uses: actions/checkout@v4
        
      - name: automerge
        uses: "pascalgn/automerge-action@v0.16.2"
        env:
          GITHUB_TOKEN: "${{ secrets.GITHUB_TOKEN }}"
          MERGE_LABELS: "automerge,!work in progress"
          MERGE_METHOD: "squash"
          MERGE_COMMIT_MESSAGE: "pull-request-title"
          MERGE_FORKS: "false"
          MERGE_RETRIES: "6"
          MERGE_RETRY_SLEEP: "10000"